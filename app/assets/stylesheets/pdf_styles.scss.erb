
.card-trip-activities {
  display: flex;
  flex-direction: column;
}

.card {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ccc;
}

.card-title {
  background-color: #f1f1f1;
  color: #333;
  padding: 5px 10px;
  margin: 0;
}

.card-description {
  margin-left: 20px;
}

.logo-container {
  position: fixed;
  left: 10px;
  bottom: 10px;
}

.logo {
  width: 100px;
  height: auto;
}
